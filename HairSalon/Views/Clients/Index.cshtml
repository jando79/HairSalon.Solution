@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Clients: </h1>

@if (@Model.Count == 0)
{
  <h3>No Clients have been added.</h3>
} 
else
{
  <ul>
    @foreach (Client client in Model)
    {
      <p>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId })</p>
    }
  </ul>
}

<p>@Html.ActionLink("Add new Client", "Create")</p>
<p>@Html.ActionLink("See all Employees", "Index", "Stylists")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
